{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  }, 
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__/**", "src/tests/**"]
}
